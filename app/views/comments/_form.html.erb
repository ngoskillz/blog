<%= form_for([@article, @article.comments.build]) do |f| %>
  <% if user_signed_in? %>
    <% case current_user.role.name %>
      <% when 'user', 'moderator', 'editor', 'admin' %>
        <p>
          <%= f.label :commenter %><br>
          <%= f.text_field :commenter %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit %>
        </p>
    <% end %>
  <% end %>     
<% end %>