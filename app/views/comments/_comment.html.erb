<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<% if user_signed_in? %>
  <% case current_user.role.name %>
    <% when 'moderator', 'admin' %>
      <p>
        <%= link_to 'Destroy Comment', [comment.article, comment],
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
      </p>
  <% end %>
<% end %>
