<% provide(:title, 'All users') %>
<h1>All users</h1>
<br><br>

<div class="users">
  <table class="table table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Formatted Email</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody class="left">
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.email %></td>
            <td><%= user.role.name %></td>
            <td><%= user.formatted_email %></td>
          </tr>
        </tbody>
      <% end %>
  </table>
</div>



